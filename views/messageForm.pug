extends layout

block content

    div(class="row")
        div(class="col s12 m8 offset-m2 l6 offset-l3")

            h1(class="center-align") Create New Post

            if errors
                ul
                    each error in errors
                        li 
                            div(class="chip red ") 
                                i(class="material-icons white-text left") error 
                                span(class="white-text") #{error.msg}
                                i(class="close material-icons white-text") close


            form(method="POST")
                div(class="input-field")
                    input(type="text" name="title" id="title" value=(data? data.title : ""))
                    label(for="title") Title

                div(class="input-field")
                    textarea(name="message", cols="50", rows="5" id="message" class="materialize-textarea" ) #{data? data.message : ""}
                    label(for="message") Whats on your mind

                div(class="input-field center")
                    button(type="submit" class="btn waves-effect waves-blue blue ligthen-3 dash-btn") Post

                    a(href="/dash" class="btn waves-effect waves-blue blue ligthen-3") Cancel