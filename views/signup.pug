extends layout

block content

    div(class="row")
        div(class="col s12 m8 offset-m2 l6 offset-l3")

            h1(class="center-align") Sign Up Form

            if errors
                ul
                    each error in errors
                        li 
                            div(class="chip red")    
                                i(class="material-icons white-text left") error 
                                span(class="white-text") #{error.msg}
                                i(class="close material-icons white-text") close


            form(method="POST")
                div(class="input-field")
                    input(type="text" id="first" name="first" value=(data? data.first : ""))
                    label(for="first") First Name

                div(class="input-field")
                    input(type="text" id="last" name="last" value=(data? data.last : ""))
                    label(for="last") Last Name
        
                div(class="input-field")
                    input(type="email" id="email" name="email" value=(data? data.email : ""))
                    label(for="email") Email                

                div(class="input-field")
                    input(type="password" id="password" name="password" )
                    label(for="password") Passowrd

                div(class="input-field")
                    input(type="password" id="" name="comfirm-password")
                    label(for="comfirm-password") Comfirm Password

                div(class="input-field center")
                    button(type="submit" class="btn waves-effect waves-blue blue ligthen-3") Sign Up