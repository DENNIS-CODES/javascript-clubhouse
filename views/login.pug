extends layout

block content

    div(class="row")
        div(class="col s12 m8 offset-m2 l6 offset-l3")

            h1(class="center-align") Login Form

            if errors
                ul
                    each error in errors
                        li 
                            div(class="chip red ") 
                                i(class="material-icons white-text left") error 
                                span(class="white-text") #{error.msg}
                                i(class="close material-icons white-text") close

    
            form(method="POST")
                div(class="input-field")
                    input(type="email" id="email" name="email")
                    label(for="email") Enter Email

                div(class="input-field")
                    input(type="password" id="password" name="password")
                    label(for="password") Enter Password


                div(class="input-field center")
                    button(type="submit" class="btn waves-effect waves-blue blue ligthen-3" ) Login